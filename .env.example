PONDER_RPC_URL_8453=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY_HERE

# Ccontrols which database to use (default: pglite)
# Options: 'pglite' (SQLite) for local dev, 'postgres' for production
PONDER_DB_KIND=postgres

# For PostgreSQL (when PONDER_DB_KIND=postgres)
DATABASE_URL=postgres://megapot:password@localhost:5432/megapot_indexer
DB_USER=megapot
DB_PASSWORD=password
DB_NAME=megapot_indexer
DB_PORT=5432

# For SQLite/pglite (when PONDER_DB_KIND=pglite)
# Optionally set custom directory (default: ./.ponder/pglite)
# PGLITE_DIRECTORY=./.ponder/pglite

PONDER_PORT=42069
PONDER_LOG_LEVEL=info
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=4096

# For development mode with hot reloading:
# PONDER_COMMAND=pnpm dev
# NODE_ENV=development

# Optional: Adminer Configuration (use --profile tools to enable)
ADMINER_PORT=3333