NODE_ENV=development

SERVICE_NAME=megapot-mcp-server
SERVICE_VERSION=0.0.1

# logging
LOG_LEVEL=info
LOG_PRETTY=true
LOG_REDACT_PATHS=password,token,secret,authorization,apiKey

# transport (stdio or http)
MEGAPOT_MCP_TRANSPORT=stdio
MEGAPOT_MCP_HOST=0.0.0.0
MEGAPOT_MCP_PORT=3001
CORS_ORIGINS=*

# rate limiting per session
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20
RATE_LIMIT_REFILL=10

# session management
MAX_SESSIONS=1000
SESSION_TIMEOUT_MS=3600000
SESSION_CLEANUP_INTERVAL_MS=60000

# graphQL
GRAPHQL_ENDPOINT=http://localhost:42069/graphql
MAX_QUERY_DEPTH=10
MAX_QUERY_COMPLEXITY=1000
GRAPHQL_TIMEOUT_MS=30000

# auth
ENABLE_AUTH=false
AUTH_TOKEN_HEADER=x-auth-token

# performance
ENABLE_METRICS=false
METRICS_PORT=9090